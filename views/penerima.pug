extends layout

block content
 div(class='row mb-2')
  div(class='col-sm-12')
   div(class='card')
    h6(class='card-header') Data Penerima 
    div(class='card-body')

     form(method='post', enctype='multipart/form-data', id='formpenerima')
      div(class='form-group')
       label(class=' form-control-label col-sm-2') Import Excel
       input(type='file', id='fileexcel', name='excelku',class='btn btn-sm btn-success', accept='application/vnd.ms-excel, application/vnd.openxmlformats-officedocument.spreadsheetml.sheet')
       input(type='submit', value='Simpan', class='btn btn-sm btn-secondary ml-1')


 div(class='row')
  div(class='col-sm-12')
   div(class='card')
    div(class='card-body')
     table(class='table', id='dtx')
      thead
       th Nama
       th Nomor
       th Kategori


